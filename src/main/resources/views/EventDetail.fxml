<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="project.controllers.EventDetailController"
      alignment="CENTER" spacing="15"
      style="-fx-padding: 20; -fx-background-color: white;">

    <ImageView fx:id="eventImage" fitHeight="200" fitWidth="300" preserveRatio="true"/>
    <Label fx:id="eventName" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label fx:id="eventDateDebut" />
    <Label fx:id="eventDateFin" />
    <TextArea fx:id="eventDescription" editable="false" wrapText="true" prefHeight="150" />

    <Button text="Fermer" onAction="#handleClose"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
</VBox>
