<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.controllers.AddEventController"
            style="-fx-background-color: #f0f8ff;">
    <children>
        <VBox spacing="15" alignment="CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="20"
              style="-fx-background-color: white; -fx-padding: 25px; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, #dcdcdc, 10, 0.5, 0, 0);">

            <Label text="🎉 Ajouter un Nouvel Événement"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <TextField fx:id="nameField" promptText="📌 Nom de l'événement"
                       style="-fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

            <TextField fx:id="startDateField" promptText="📅 Date de début (YYYY-MM-DD)"
                       style="-fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

            <TextField fx:id="endDateField" promptText="📅 Date de fin (YYYY-MM-DD)"
                       style="-fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

            <TextField fx:id="descriptionField" promptText="📝 Description"
                       style="-fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="📷 Choisir une image" onAction="#handleChooseImage"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 8px;"/>
                <TextField fx:id="imageField" promptText="Chemin de l'image"
                           style="-fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-background-radius: 8px;"
                           editable="false"/>
            </HBox>

            <ImageView fx:id="imagePreview" fitHeight="120" fitWidth="200" preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, gray, 5, 0.5, 0, 0);"/>

            <Button text="✅ Ajouter l'Événement" onAction="#handleAddEvent"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-padding: 8 20;"/>

            <!-- Bouton Retour -->
            <Button text="↩ Retour à la liste des événements" onAction="#handleBackToList"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 10px; -fx-padding: 6 15;"/>
        </VBox>
    </children>
</AnchorPane>
