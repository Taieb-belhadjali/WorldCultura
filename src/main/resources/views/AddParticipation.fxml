<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.controllers.AddParticipationController"
            prefWidth="400" prefHeight="350"
            style="-fx-background-color: #ecf0f1;">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
            <Label text="Ajouter une participation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />


            <TextField fx:id="nomField" promptText="Nom" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="telephoneField" promptText="Téléphone" />

            <Button text="Envoyer" fx:id="submitBtn" onAction="#handleSubmit"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        </VBox>
    </children>
</AnchorPane>
