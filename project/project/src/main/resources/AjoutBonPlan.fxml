<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="project.controllers.AjoutBonPlanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Ajouter un Bon Plan" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <GridPane hgap="10.0" vgap="10.0">
            <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="titreTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="descriptionTextArea" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="80.0" wrapText="true" />

            <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="lieuTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Date d'Expiration:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="dateExpirationDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="CatÃ©gorie:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="categorieComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="150.0" />
        </GridPane>
        <Button text="Ajouter" onAction="#ajouterBonPlan" />
        <Button text="Clear" onAction="#clearForm" />
    </children>
</VBox>
