<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.ShowBonPlanController">
    <stylesheets>
        <URL value="@styles.css" /> </stylesheets>
    <center>
        <VBox style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #336699;" text="Bon Plan Details" />
                <GridPane hgap="15" style="-fx-padding: 20;" vgap="15">
                    <Label fx:id="idLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="idTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label fx:id="titreLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="titreTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label fx:id="descriptionLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="descriptionTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label fx:id="lieuLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Lieu:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="lieuTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label fx:id="dateCreationLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Date de Création:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextField fx:id="dateCreationTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label fx:id="dateExpirationLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Date d'Expiration:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextField fx:id="dateExpirationTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label fx:id="categorieLabelLabel" style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Catégorie:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <TextField fx:id="categorieTextField" editable="false" style="-fx-background-color: #eeeeee; -fx-border-radius: 5; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-margin-top: 20px; -fx-text-fill: #336699;" text="Feedbacks" />

                <TableView fx:id="feedbackTable" prefHeight="200.0" style="-fx-margin-left: 20px; -fx-margin-right: 20px; -fx-border-radius: 5; -fx-border-color: #cccccc;">
                    <columns>
                        <TableColumn fx:id="feedbackIdColumn" text="ID" style="-fx-text-fill: #666666;" />
                        <TableColumn fx:id="feedbackCommentaireColumn" text="Commentaire" style="-fx-text-fill: #666666;" />
                        <TableColumn fx:id="feedbackRatingColumn" text="Rating" style="-fx-text-fill: #666666;" />
                        <TableColumn fx:id="feedbackDateCreationColumn" text="Date de Création" style="-fx-text-fill: #666666;" />
                    </columns>
                    <style>
                        .table-view {
                        -fx-base: #f0f0f0;
                        -fx-control-inner-background: white;
                        -fx-background-color: #f0f0f0;
                        -fx-table-cell-border-color: transparent;
                        -fx-padding: 10;
                        }

                        .table-view .column-header-background {
                        -fx-background-color: #e0e0e0;
                        -fx-background-radius: 5 5 0 0;
                        -fx-padding: 8;
                        }

                        .table-view .column-header {
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                        -fx-text-fill: #333333;
                        -fx-alignment: center;
                        }

                        .table-view .table-row-cell {
                        -fx-font-size: 12px;
                        -fx-text-fill: #444444;
                        -fx-alignment: center;
                        }

                        .table-view .table-row-cell:odd {
                        -fx-background-color: #ffffff;
                        }

                        .table-view .table-row-cell:even {
                        -fx-background-color: #f8f8f8;
                        }

                        .table-view .table-row-cell:selected {
                        -fx-background-color: #b0e0e6;
                        -fx-text-fill: #000000;
                        }

                        .table-view .scroll-bar:vertical {
                        -fx-opacity: 0;
                        }

                        .table-view .scroll-bar:vertical:hover {
                        -fx-opacity: 1;
                        }
                    </style>
                </TableView>

                <HBox style="-fx-padding: 20; -fx-alignment: center; -fx-spacing: 20;" alignment="CENTER">
                    <VBox style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 3);">
                        <Label text="Add Feedback" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #336699;" />
                        <TextArea fx:id="addFeedbackCommentaireTextArea" prefHeight="50.0" prefWidth="200.0" promptText="Enter your feedback..." style="-fx-border-radius: 5; -fx-text-fill: #444444; -fx-prompt-text-fill: #aaaaaa;" />
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Rating:" style="-fx-text-fill: #555555;" />
                            <Slider fx:id="addFeedbackRatingSlider" max="5" min="1" value="3" style="-fx-control-inner-background: #b0c4de;" />
                            <Label fx:id="addFeedbackRatingValue" text="3" style="-fx-text-fill: #333333;" />
                        </HBox>
                        <Button fx:id="addFeedbackButton" onAction="#handleAddFeedback" text="Add Feedback"  styleClass="add-feedback-button"  />
                    </VBox>

                    <VBox style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 5, 0, 0, 3);">
                        <Label text="Edit Feedback" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #336699;"/>
                        <Button fx:id="goToUpdateFeedbackButton" onAction="#goToUpdateFeedbackPage" text="Update Feedback" disable="true" styleClass="button" />
                    </VBox>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
