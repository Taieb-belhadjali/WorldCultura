<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@../styles/styleback.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.ReservationUserController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" styleClass="top-section" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="top-label" text="Liste des mes Réservations">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <VBox spacing="10.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>

                                <TextField fx:id="searchInput" prefWidth="400.0" promptText="Rechercher par..."  style="-fx-background-color: white;" styleClass="search-input"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button onAction="#sortReservationsByNewest" text="Plus récent"/>
                                <Button onAction="#sortReservationsByOldest" text="Plus ancien"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER" spacing="10.0" styleClass="main-content" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ListView fx:id="userReservationsListView" prefWidth="860.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="bottom-section" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button text="Voir les offres de voyages" onAction="#switchToRehlaFront"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>