<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<VBox prefWidth="250.0" styleClass="sidebar" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.SidebarController">
    <children>
        <HBox alignment="CENTER_LEFT" styleClass="sidebar-header, sidebar-brand">
            <children>
                <Label styleClass="sidebar-brand-name" text="World Cultura">
                    <textFill>
                        <Color blue="0.8" green="0.168" red="0.0" opacity="1.0" />
                    </textFill>
                    <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
            </padding>
        </HBox>
        <Label styleClass="sidebar-divider" />
        <VBox styleClass="sidebar-nav">
            <children>
                <VBox>
                    <Button mnemonicParsing="false" styleClass="nav-item, nav-link" prefWidth="Infinity" onAction="#toggleVolManagement">
                        <graphic>
                            <Label styleClass="nav-icon fa fa-plane" text="✈️" style="-fx-font-size: 2.8em;" />
                        </graphic>
                        <text>Gestion Vols</text>
                        <padding>
                            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                        </padding>
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Button>
                    <VBox fx:id="volManagementLinks" visible="false">
                        <children>
                            <Button mnemonicParsing="false" onAction="#loadAirlines" styleClass="nav-item, nav-link, sub-nav-link" prefWidth="Infinity">
                                <text>Compagnie Aérienne</text>
                                <padding>
                                    <Insets bottom="10.0" left="30.0" right="15.0" top="10.0" />
                                </padding>
                                <graphic>
                                    <Label text="🧑‍✈️" style="-fx-font-size: 2.5em;" />
                                </graphic>
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Button>
                            <Button mnemonicParsing="false" onAction="#loadFlights" styleClass="nav-item, nav-link, sub-nav-link" prefWidth="Infinity">
                                <text>Liste des Vols</text>
                                <padding>
                                    <Insets bottom="10.0" left="30.0" right="15.0" top="10.0" />
                                </padding>
                                <graphic>
                                    <Label text="🗺️" style="-fx-font-size: 2.5em;" />
                                </graphic>
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Button>
                            <Button mnemonicParsing="false" onAction="#loadReservations" styleClass="nav-item, nav-link, sub-nav-link" prefWidth="Infinity">
                                <text>Liste des Réservations</text>
                                <padding>
                                    <Insets bottom="10.0" left="30.0" right="15.0" top="10.0" />
                                </padding>
                                <graphic>
                                    <Label text="🎟️" style="-fx-font-size: 2.5em;" />
                                </graphic>
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Button>
                        </children>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>