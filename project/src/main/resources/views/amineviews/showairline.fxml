<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?> <?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="project.controllers.showairline"
      spacing="10"
      prefWidth="300.0"
      style="-fx-background-color: #f8f9fa; -fx-padding: 15px;">

    <Label text="Détails de la Compagnie Aérienne"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0d6efd; -fx-margin-bottom: 10px;">
        <font>
            <Font size="18.0" />
        </font>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </Label>

    <GridPane hgap="10" vgap="5">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
        <Label fx:id="nomLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Logo:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
        <ImageView fx:id="logoImageView" GridPane.columnIndex="1" GridPane.rowIndex="2" fitHeight="50.0" fitWidth="150.0" preserveRatio="true" /> <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
        <Label fx:id="descriptionLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" wrapText="true" prefWidth="200.0" />

        <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
        <Label fx:id="contactLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

</VBox>