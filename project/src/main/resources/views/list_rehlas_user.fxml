<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.ListRehlaUserController">
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Available Flights">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <ListView fx:id="rehlasListView">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <cellFactory>
                <fx:factory>
                    <VBox>
                        <children>
                            <HBox spacing="10.0">
                                <children>
                                    <Label fx:id="departLabel" text="Departure:" />
                                    <Label fx:id="destinationLabel" text="Destination:" />
                                    <Label fx:id="dateLabel" text="Date:" />
                                    <Label fx:id="priceLabel" text="Price:" />
                                    <Button fx:id="reserveButton" onAction="#handleReserveButton" text="Reserve">
                                        <userData>
                                            <fx:reference source="rehla" />
                                        </userData>
                                    </Button>
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                    </VBox>
                </fx:factory>
            </cellFactory>
        </ListView>
    </children>
</VBox>