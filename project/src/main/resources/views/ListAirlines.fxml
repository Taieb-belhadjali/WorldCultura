<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.fxml.FXMLLoader?>
<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../styles/styleback.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.ListAirlinesController">
    <left>
        <fx:include fx:id="sidebar" source="sidebar.fxml" />
    </left>
    <top>
        <VBox alignment="CENTER" spacing="10.0" styleClass="top-section" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="top-label" text="Liste des Compagnies Aériennes">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <VBox spacing="10.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <TextField fx:id="searchField" prefWidth="300.0" promptText="Rechercher une compagnie..." style="-fx-background-color: white;" styleClass="search-input"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER" styleClass="main-content" style="-fx-padding: 20px;">
            <TableView fx:id="airlineTable" prefHeight="400.0" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" visible="false" styleClass="table-column"/>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150.0" styleClass="table-column"/>
                    <TableColumn fx:id="logoColumn" text="Logo" prefWidth="100.0" styleClass="table-column"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250.0" styleClass="table-column"/>
                    <TableColumn fx:id="contactColumn" text="Contact" prefWidth="150.0" styleClass="table-column"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="250.0" styleClass="table-column"/>
                </columns>
            </TableView>
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button text="Nouvelle Compagnie" onAction="#handleAddAirline" styleClass="button"/>
                <Button text="Modifier Compagnie" onAction="#handleUpdateAirline" styleClass="button"/>
                <Button text="Supprimer Compagnie" onAction="#handleDeleteSelectedAirline" styleClass="button"/>
                <Button text="Afficher Détails" onAction="#handleShowSelectedAirlineDetails" styleClass="button"/>
            </HBox>
        </VBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>