<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../styles/styleback.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.ListRehlaController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" styleClass="top-section" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="top-label" text="Liste des Vols">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <VBox spacing="10.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <TextField fx:id="searchField" prefWidth="300.0" promptText="Rechercher un vol..." style="-fx-background-color: white;" styleClass="search-input"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="main-content" style="-fx-padding: 20px;">
            <TableView fx:id="rehlaTable" prefHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="agenceColumn" text="Agence" prefWidth="100"/>
                    <TableColumn fx:id="departColumn" text="Départ" prefWidth="120"/>
                    <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="120"/>
                    <TableColumn fx:id="departDateColumn" text="Date Départ" prefWidth="120"/>
                    <TableColumn fx:id="arrivalDateColumn" text="Date Arrivée" prefWidth="120"/>
                    <TableColumn fx:id="priceColumn" text="Prix" prefWidth="80"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Nouveau Vol" onAction="#handleAddRehla" styleClass="button"/>
                <Button text="Modifier Vol" onAction="#handleUpdateRehla" styleClass="button"/>
                <Button text="Supprimer Vol" onAction="#handleDeleteSelectedRehla" styleClass="button"/>
                <Button text="Afficher Détails" onAction="#handleShowSelectedRehlaDetails" styleClass="button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>