    <style>
        /* Conteneur g√©n√©ral */
        .container {
            max-width: 800px;
            margin: 0 auto;
            font-family: 'Arial', sans-serif;
            color: #2d3748;
        }

        /* Carte des d√©tails */
        .order-details-card {
            background: linear-gradient(135deg, #f9fafc, #edf2f7);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Titre principal */
        .order-title {
            font-size: 28px;
            font-weight: bold;
            color: #2c5282;
        }

        /* Liste des informations de la commande */
        .order-info-list {
            list-style: none;
            padding: 0;
        }

        .order-info-list li {
            font-size: 16px;
            margin-bottom: 8px;
        }

        /* Section des articles */
        .items-title {
            font-size: 20px;
            font-weight: bold;
            color: #2c5282;
            margin-bottom: 12px;
        }

        .order-items-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 16px;
            background-color: #f7fafc;
            padding: 10px;
            border-radius: 8px;
