{% extends 'baseBlog.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #6e8efb, #a777e3);">
                <h2 class="fw-bold">💬 Comment Details</h2>
            </div>
            <div class="card-body p-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">🆔 Comment ID</label>
                    <p>{{ comment.id }}</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">📝 Comment Content</label>
                    <p>{{ comment.content }}</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">📅 Create Date</label>
                    <p>{{ comment.createDate ? comment.createDate|date('Y-m-d H:i:s') : '' }}</p>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm">⬅️ Back to List</a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-primary rounded-pill py-2 px-4 shadow-sm transform-hover-button">✏️ Update</a>
                </div>

                <!-- Delete Form -->
                <div class="text-center mt-3">
                    {{ include('comment/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}