{% extends 'dashboard.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Header -->
    <h1 class="mb-5 text-dark text-center">User Details</h1>

    <!-- User Details Table -->
    <table class="table table-bordered" style="border-color: black; width: 80%; margin: 0 auto;">
        <tbody>
            <tr>
                <th scope="row" class="w-25">ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ user.Nom }}</td>
            </tr>
            <tr>
                <th scope="row">Prenom</th>
                <td>{{ user.Prenom }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th scope="row">Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : 'No roles assigned' }}</td>
            </tr>
            <tr>
                <th scope="row">Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Action Buttons -->
    <div class="mt-4 text-center">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a>
        <a href="{{path('app_user_export_pdf',{'id':user.id})}}" class="btn btn-success btn-sm">Export</a>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Ensure black border */
    table, th, td {
        border-color: black !important;
    }

    /* Lower the table */
    .mt-5 {
        margin-top: 300px; /* Adjust this value to lower further */
    }
</style>
{% endblock %}
