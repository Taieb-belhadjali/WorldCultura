{% extends 'dashboard.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container py-5" style="background-color: #fff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 class="text-center text-primary mb-4">Edit Event</h1>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                {{ include('eventback/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_eventback_index') }}" class="btn btn-outline-secondary btn-lg rounded-pill px-4 py-2 shadow-sm">
                Back to List
            </a>
        </div>

        <div class="mt-3 text-center">
            {{ include('eventback/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
