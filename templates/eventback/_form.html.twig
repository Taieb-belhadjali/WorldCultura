{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="card shadow-sm p-4 border-0" style="background-color: #fff; border-radius: 10px;">
    
    {% for field in form %}
        {% if field.vars.name != 'file' and field.vars.name != '_token' %} {# Exclure le champ file et _token de la boucle #}
            <div class="mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control', 'placeholder': 'Enter ' ~ field.vars.name}}) }}
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endfor %}

    <!-- Upload Image -->
    <div class="mb-3">
        {{ form_label(form.file, 'Upload Event Image', {'label_attr': {'class': 'form-label fw-bold text-dark'}}) }}
        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.file) }}
    </div>

    <!-- Champ token cachÃ© -->
    {{ form_widget(form._token) }}

    <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
</div>

{{ form_end(form) }}
