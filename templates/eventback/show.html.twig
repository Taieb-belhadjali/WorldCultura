{% extends 'dashboard.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header text-center bg-primary text-white">
                <h2><i class="bi bi-calendar-event"></i> Event Details</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Image -->
                    <div class="col-md-6 text-center mb-3">
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.name }}" class="img-fluid rounded shadow" style="max-width: 80%; max-height: 250px; object-fit: cover;">
                        {% else %}
                            <div class="alert alert-warning">No image available</div>
                        {% endif %}
                    </div>
                    
                    <!-- Event Details -->
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>📌 ID:</strong> {{ event.id }}</li>
                            <li class="list-group-item"><strong>🏷️ Name:</strong> {{ event.name }}</li>
                            <li class="list-group-item"><strong>📝 Description:</strong> {{ event.description }}</li>
                            <li class="list-group-item"><strong>📅 Start Date:</strong> {{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i') : 'N/A' }}</li>
                            <li class="list-group-item"><strong>⏳ End Date:</strong> {{ event.dateFin ? event.dateFin|date('Y-m-d H:i') : 'N/A' }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="card-footer text-center">
                <a href="{{ path('app_eventback_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>  Back to List
                </a>
                
            </div>
        </div>

        <div class="mt-3 text-center">
            {{ include('eventback/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
