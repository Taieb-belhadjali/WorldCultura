{% extends 'dashboard.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="container-fluid py-5" style="background-color: #fff;">
        <h1 class="text-center text-primary mb-4">Event Details</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ event.id }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if event.image %}
                            <img src="{{ asset('uploads/images/' ~ event.image) }}" alt="{{ event.name }}" style="max-width: 150px; max-height: 100px; object-fit: cover;">
                        {% else %}
                            <span>No image available</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ event.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>EndDate</th>
                    <td>{{ event.dateFin ? event.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_eventback_index') }}" class="btn btn-secondary btn-sm">Back to List</a>
            <a href="{{ path('app_eventback_edit', {'id': event.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('eventback/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
