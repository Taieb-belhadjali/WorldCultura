{% extends "base.html.twig" %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="container min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="col-md-8 col-lg-6 col-xxl-4">
      <div class="card shadow-lg rounded-4">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <a href="{{ path('app_test_temp') }}" class="d-block">
              <img src="{{ asset('assets/img/Logo.png') }}" width="100" alt="Logo">
            </a>
            <p class="text-muted">WorldCultura</p>
          </div>

          <!-- Display errors if any -->
          {% for flash_error in app.flashes('registration_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
          {% endfor %}

          <!-- Registration Form -->
          {{ form_start(registrationForm) }}
            <div class="mb-3">
              {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'fw-bold'}}) }}
              {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control shadow-sm'}}) }}
              {{ form_errors(registrationForm.nom) }}
            </div>
            <div class="mb-3">
              {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'fw-bold'}}) }}
              {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control shadow-sm'}}) }}
              {{ form_errors(registrationForm.prenom) }}
            </div>
            <div class="mb-3">
              {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'fw-bold'}}) }}
              {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control shadow-sm'}}) }}
              {{ form_errors(registrationForm.email) }}
            </div>
            <div class="mb-3">
              {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'fw-bold'}}) }}
              {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control shadow-sm'}}) }}
              {{ form_errors(registrationForm.password) }}
            </div>
            <div class="mb-4 form-check">
              {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
              {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
              {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary w-100 py-3 fs-5 mb-4 rounded-3">
              Register
            </button>

            <div class="text-center mt-3">
              <p class="fs-6 mb-0">Already have an Account?</p>
              <a class="text-primary fw-bold" href="{{ path('app_login') }}">Sign In</a>
            </div>

            <input type="hidden" id="form_captcha" name="form[captcha]" />
            <script>
              var recaptchaCallback_form_captcha = function() {
                  grecaptcha.execute('<YOUR-RECAPTCHA-KEY>', {action: 'landing'}).then(function(token) {
                      document.getElementById('form_captcha').value = token;
                  });
              };
            </script>
            <script src="https://www.google.com/recaptcha/api.js?render=<YOUR-RECAPTCHA-KEY>&onload=recaptchaCallback_form_captcha" async defer></script> 

          {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap & jQuery -->
  <script src="{{ asset('assets/libs/jquery/dist/jquery.min.js') }}"></script>
  <script src="{{ asset('assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
