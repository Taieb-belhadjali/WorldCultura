{% extends 'dashboard.html.twig' %}

{% block title %}Participation Index{% endblock %}

{% block body %}
    <div class="container-fluid py-4" style="background-color: #fff; border-radius: 10px;">
        <h1 class="text-center text-primary mb-4">List of Participations</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for participation in participations %}
                        <tr class="align-middle text-center">
                            <td>{{ participation.id }}</td>
                            <td>{{ participation.nom }}</td>
                            <td>{{ participation.email }}</td>
                            <td>{{ participation.telephone }}</td>
                            <td>
                                <a href="{{ path('app_participationback_show', {'id': participation.id}) }}" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_participationback_edit', {'id': participation.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_participationback_new') }}" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Create New
            </a>
        </div>
    </div>
{% endblock %}
