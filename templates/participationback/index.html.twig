{% extends 'dashboard.html.twig' %}

{% block title %}Participation Index{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1 class="text-center text-primary mb-4">List of Participations</h1>

        <div class="row justify-content-center">
            {% for participation in participations %}
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h5 class="card-title text-center text-primary">
                                <i class="bi bi-person-circle"></i> {{ participation.nom }}
                            </h5>
                            <p class="card-text"><i class="bi bi-envelope"></i> <strong>Email:</strong> {{ participation.email }}</p>
                            <p class="card-text"><i class="bi bi-telephone"></i> <strong>Phone:</strong> {{ participation.telephone }}</p>
                            <p class="card-text"><i class="bi bi-calendar-event"></i> 
                                <strong>Event:</strong> 
                                {% if participation.event %}
                                    {{ participation.event.name}}
                                {% else %}
                                    <span class="text-muted">No event assigned</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="card-footer text-center">
                            <a href="{{ path('app_participationback_show', {'id': participation.id}) }}" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Show
                            </a>
                            <a href="{{ path('app_participationback_delete', {'id': participation.id}) }}" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center text-muted">
                    <p>No records found</p>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_participationback_new') }}" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Create New
            </a>
            <a href="{{ path('app_eventback_index') }}" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Event List
            </a>
        </div>
    </div>
{% endblock %}
