{% extends 'dashboard.html.twig' %}

{% block title %}Participation Details{% endblock %}

{% block body %}
    <div class="container-fluid py-4" style="background-color: #fff; border-radius: 10px;">
        <h1 class="text-center text-primary mb-4">Participation Details</h1>

        <div class="card shadow p-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">Id</th>
                        <td>{{ participation.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Name</th>
                        <td>{{ participation.nom }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Email</th>
                        <td>{{ participation.email }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Phone</th>
                        <td>{{ participation.telephone }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('app_participationback_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_participationback_edit', {'id': participation.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>

            <div class="mt-3 text-center">
                {{ include('participationback/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
