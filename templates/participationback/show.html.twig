{% extends 'dashboard.html.twig' %}

{% block title %}Participation Details{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-person-circle"></i> ðŸ“ŒParticipation Details</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="bi bi-hash text-primary"></i> <strong>ID:</strong> {{ participation.id }}</li>
                        <li class="list-group-item"><i class="bi bi-person-fill text-primary"></i> <strong>Name:</strong> {{ participation.nom }}</li>
                        <li class="list-group-item"><i class="bi bi-envelope-fill text-primary"></i> <strong>Email:</strong> {{ participation.email }}</li>
                        <li class="list-group-item"><i class="bi bi-telephone-fill text-primary"></i> <strong>Phone:</strong> {{ participation.telephone }}</li>
                    </ul>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_participationback_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <a href="{{ path('app_participationback_edit', {'id': participation.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <div>
                        {{ include('participationback/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
