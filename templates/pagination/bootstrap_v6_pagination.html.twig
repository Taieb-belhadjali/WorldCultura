{% if pageCount > 1 %}
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center mt-4" style="gap: 8px;">
            {# Previous Button #}
            <li class="page-item {{ previous is not defined or not previous ? 'disabled' : '' }}">
                <a class="page-link modern-pagination"
                   href="{{ previous is defined and previous ? path(route, query|merge({(pageParameterName): previous})) : '#' }}"
                   aria-label="Previous">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            {# Page Numbers #}
            {% for page in pagesInRange %}
                <li class="page-item {{ current == page ? 'active' : '' }}">
                    <a class="page-link modern-pagination {{ current == page ? 'active' : '' }}"
                       href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                </li>
            {% endfor %}

            {# Next Button #}
            <li class="page-item {{ next is not defined or not next ? 'disabled' : '' }}">
                <a class="page-link modern-pagination"
                   href="{{ next is defined and next ? path(route, query|merge({(pageParameterName): next})) : '#' }}"
                   aria-label="Next">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>

    <style>
        .modern-pagination {
            border: none;
            padding: 10px 18px;
            margin: 0 3px;
            border-radius: 30px;
            background: #f8f9fa;
            box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1), 
                        -3px -3px 6px rgba(255, 255, 255, 0.7);
            color: #333;
            font-weight: 500;
            transition: all 0.3s ease-in-out;
        }

        .modern-pagination:hover {
            background:rgb(83, 88, 93);
            color: white;
            box-shadow: 3px 3px 10px rgba(0, 123, 255, 0.4), 
                        -3px -3px 10px rgba(255, 255, 255, 0.7);
        }

        .modern-pagination.active {
            background:rgb(71, 73, 76);
            color: white;
            font-weight: bold;
            box-shadow: inset 3px 3px 6px rgba(0, 0, 0, 0.2),
                        inset -3px -3px 6px rgba(255, 255, 255, 0.3);
        }

        .modern-pagination:disabled, .page-item.disabled .modern-pagination {
            opacity: 0.5;
            pointer-events: none;
        }
    </style>
{% endif %}
