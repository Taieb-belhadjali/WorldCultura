{% extends 'dashboard.html.twig' %}

{% block body %}
    <div style="background-color: #f8f9fa; padding: 20px;">
        <h1 class="my-4">Post Index</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Image</th>
                    <th>Create Date</th>
                    
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content|length > 100 ? post.content|slice(0,50)~ '...' : post.content }}</td>

                    <td><img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" class="img-thumbnail" style="max-width: 100px;"></td>
                    <td>{{ post.createDate }}</td>
                    <td>
                        <a href="{{ path('app_post_back_show', {'id': post.id}) }}" class="btn btn-dark-blue btn-sm">Show</a>
                        <a href="{{ path('app_post_back_edit', {'id': post.id}) }}" class="btn btn-dark-blue btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_post_back_new') }}" class="btn btn-dark-blue mt-3">Create New</a>
    </div>
{% endblock %}
{% block css %}
<style>
    .btn-dark-blue {
        background-color: #00008b;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .btn-dark-blue:hover {
        background-color: #00006b;
    }

    .table {
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
    }

    .table th {
        background-color: #343a40;
        color: white;
    }

    .table td {
        vertical-align: middle;
    }

    .content-preview {
        max-width: 10px; /* Largeur max */
        max-height: 60px; /* Hauteur max */
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Nombre max de lignes */
        -webkit-box-orient: vertical;
        white-space: normal;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .content-preview {
            max-width: 200px;
            max-height: 40px;
            -webkit-line-clamp: 1;
        }
    }
</style>
{% endblock %}