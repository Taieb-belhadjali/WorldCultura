{% extends 'dashboard.html.twig' %}

{% block body %}
    <div style="background-color: #f8f9fa; padding: 20px;">
        <h1 class="my-4">Post Index</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Image</th>
                    <th>Create Date</th>
                    
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td><img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" class="img-thumbnail" style="max-width: 100px;"></td>
                    <td>{{ post.createDate }}</td>
                    <td>
                        <a href="{{ path('app_post_back_show', {'id': post.id}) }}" class="btn btn-dark-blue btn-sm">Show</a>
                        <a href="{{ path('app_post_back_edit', {'id': post.id}) }}" class="btn btn-dark-blue btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_post_back_new') }}" class="btn btn-dark-blue mt-3">Create New</a>
    </div>
{% endblock %}
{% block css %}
<style>
    .btn-dark-blue {
        background-color: #00008b;
        color: white;
    }
</style>
{% endblock %}