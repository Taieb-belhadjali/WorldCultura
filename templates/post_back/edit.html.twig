{% extends 'dashboard.html.twig' %}

{% block body %}
    <div style="background-color: white; padding: 20px; border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h2>Edit Post</h2>

        {{ include('post_back/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_post_back_index') }}" class="btn btn-outline-primary rounded-pill px-4 py-2 mt-3 me-3" style="font-weight: bold; transition: background-color 0.3s ease;">
            Back to List
        </a>

        {{ include('post_back/_delete_form.html.twig') }}

        <style>
            /* General Button Style */
            .btn {
                font-size: 1rem;
                font-weight: bold;
                padding: 12px 20px;
                border-radius: 30px;
                display: inline-block;
                text-decoration: none;
                transition: all 0.3s ease;
                width: auto;
                min-width: 150px;
                text-align: center;
                line-height: 1.5;
            }

            /* Outline Primary Button Style */
            .btn-outline-primary {
                color: #007bff;
                border: 2px solid #007bff;
            }

            .btn-outline-primary:hover {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            /* Link Button Style (Delete) */
            .btn-link {
                color: #dc3545;
                font-size: 1.2rem;
            }

            .btn-link:hover {
                text-decoration: underline;
            }

            /* Hover Effect for All Buttons */
            .btn:hover {
                transform: scale(1.05);
            }

        </style>
    </div>
{% endblock %}
