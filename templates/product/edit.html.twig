{% extends 'base.html.twig' %}

{% block title %}‚úèÔ∏è Modifier un produit{% endblock %}

{% block body %}
<div class="container mt-4 emoji-background">
    <h1 class="text-center mb-4 text-primary">‚úèÔ∏è Modifier un produit</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4 border-0 rounded-lg">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    {{ form_errors(form) }}

                    <div class="mb-3">
                        {{ form_label(form.name, 'üõçÔ∏è Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'üìú Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.price, 'üí∞ Prix', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.imageFile, 'üñºÔ∏è Image (fichier)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.tags, 'üè∑Ô∏è Tags (s√©par√©s par des virgules)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.tags, {'attr': {'class': 'form-control', 'placeholder': 'ex: olive, huile, √©pices'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.category, 'üóÇÔ∏è Cat√©gorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.stock, 'üì¶ Stock', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'type': 'number', 'min': 0}}) }}
                    </div>

                    <button class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                {{ form_end(form) }}
            </div>
            <div class="mt-3 text-center">
                <a href="{{ path('product_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour √† la liste
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Fond avec des emojis */
    .emoji-background {
        background: linear-gradient(145deg, #f9f9f9, #ffffff), url('https://em-content.zobj.net/thumbs/240/apple/325/shopping-cart_1f6d2.png');
        background-size: 150px;
        background-repeat: repeat;
        padding: 20px;
        border-radius: 8px;
    }

    /* Style du titre */
    h1 {
        font-weight: bold;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.1);
    }

    /* Style des cartes */
    .card {
        background-color: #ffffff;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    /* Bouton principal */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    /* Bouton secondaire */
    .btn-secondary {
        background-color: #e2e8f0;
        color: #2d3748;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #cbd5e0;
        transform: translateY(-2px);
    }

    /* Style g√©n√©ral des labels */
    .form-label {
        font-weight: bold;
        font-size: 1.1rem;
        color: #4a5568;
    }

    /* Champs de formulaire */
    .form-control {
        border-radius: 6px;
        padding: 10px;
        font-size: 1rem;
    }
</style>
{% endblock %}
