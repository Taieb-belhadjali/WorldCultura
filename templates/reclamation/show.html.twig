                </div>
            </nav>
        </div>
        {% endblock %}
        <!-- Navbar & Hero End -->

        <!-- Header Start -->
        
        <!-- Header End -->

        <!-- show reclamation Start --> 
        {% block show_reclamation  %}
            <div class="card p-4 mb-4 mx-3 shadow-lg rounded border-0" style="background-color: #f8f9fa;">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h4 class="mb-0 text-white"> Reclamation</h4>
                </div>
                {% block reclamtion %}
                    <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0 text-primary">{{ reclamation.getUserName() }}</h5>
                                <span class="badge {% if reclamation.statut == 'En cours' %}bg-warning text-dark{% elseif reclamation.statut == 'Résolu' %}bg-success{% else %}bg-secondary{% endif %}">
                                    {{ reclamation.statut }}
                                </span>
                            </div>
                        <hr>
                        <p><strong>Posté le :</strong> {{ reclamation.createdat ? reclamation.createdat|date('Y-m-d ') : '' }}</p>
                        <p><strong>Type :</strong> {{ reclamation.type }}</p>
                        <p><strong>Description :</strong> {{ reclamation.description }}</p>

                        <div class="d-flex justify-content-center mx-3 mt-3">
                            <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary mx-2">Retour à la liste</a>
                            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary mx-2">Modifier</a>
                            <a href="{{ path('app_reponse_new_client', {'ReclamationId': reclamation.id}) }}" class="btn btn-primary mx-2">Ajouter Commentaire</a>
                        </div>
        
                        <div class="d-flex justify-content-center mt-3">
                            <div>
                                {{ include('reclamation/_delete_form.html.twig') | raw }}
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
            {% block reponse %}
            <div class="card p-4 mb-4 mx-3 shadow-lg rounded border-0" style="background-color: #f8f9fa;">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h4 class="mb-0 text-white">Réponses</h4>
                </div>

                <div class="card-body">
                    {% for reponse in reclamation.reponses %}
                        <div class="card p-3 mb-3 shadow-sm rounded border-0" style="background-color: #f8f9fa;">
                           {% if reponse.acteur == "Reclameur" %}
                            <div class="card-body">
                                <h6 class="text-primary">{{ reponse.acteur }}</h6>
                                <p class="text-muted mb-1">{{ reponse.createdat ? reponse.createdat|date('Y-m-d ') : '' }}</p>
                                <p>{{ reponse.description }}</p>
                                <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">edit</a>
                                {{ include('reponse/_delete_form.html.twig') }}
                            </div>
                            {% endif %}
                        
                            {% if reponse.acteur == "Admin" %}
                                <div class="card-body">
                                    <h6 class="text-primary">{{ reponse.acteur }}</h6>
                                    <p class="text-muted mb-1">{{ reponse.createdat ? reponse.createdat|date('Y-m-d ') : '' }}</p>
                                    <p>{{ reponse.description }}</p>
                                    
                                </div>
                            {% endif %}
                        </div>    
                    {% else %}
                        <p class="text-muted">Aucune réponse pour le moment.</p>
                    {% endfor %}
                </div>
            </div>
            {% endblock %}
    

            
        {% endblock %}

        <!-- show reclamtion End -->

        <!-- Subscribe Start -->
        
