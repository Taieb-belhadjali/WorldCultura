{% extends 'base.html.twig' %}

{% block html %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="utf-8">
            {% block title %}<title>WorldCultura</title>{% endblock %}
            <meta content="width=device-width, initial-scale=1.0" name="viewport">
            <meta content="" name="keywords">
            <meta content="" name="description">

            <!-- Google Web Fonts -->
            {% block google_fonts %}
                <link rel="preconnect" href="https://fonts.googleapis.com">
                <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
                <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600&family=Roboto&display=swap" rel="stylesheet">
            {% endblock %}

            <!-- Icon Font Stylesheet -->
            {% block icon_font %}
                <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
            {% endblock %}

            <!-- Libraries Stylesheet -->
            {% block libraries %}
                <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
                <link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
            {% endblock %}

            <!-- Customized Bootstrap Stylesheet -->
            {% block bootstrap %}
                <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
            {% endblock %}

            <!-- Template Stylesheet -->
            {% block style %}
                <link href="{{ asset('css/style.css') }}" rel="stylesheet">
            {% endblock %}
        {% endblock %}
    </head>

    <body>
        {% block body %}

            <!-- Topbar Start -->
            {% block topbar %}
                <div class="container-fluid bg-primary px-5 d-none d-lg-block">
                    <div class="row gx-0">
                        <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                            <div class="d-inline-flex align-items-center" style="height: 45px;">
                                <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-twitter fw-normal"></i></a>
                                <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-facebook-f fw-normal"></i></a>
                                <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-linkedin-in fw-normal"></i></a>
                                <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-instagram fw-normal"></i></a>
                                <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle" href=""><i class="fab fa-youtube fw-normal"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-4 text-center text-lg-end">
                            <div class="d-inline-flex align-items-center" style="height: 45px;">
                                <a href="#"><small class="me-3 text-light"><i class="fa fa-user me-2"></i>Register</small></a>
                                <a href="#"><small class="me-3 text-light"><i class="fa fa-sign-in-alt me-2"></i>Login</small></a>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle text-light" data-bs-toggle="dropdown"><small><i class="fa fa-home me-2"></i> My Dashboard</small></a>
                                    <div class="dropdown-menu rounded">
                                        <a href="#" class="dropdown-item"><i class="fas fa-user-alt me-2"></i> My Profile</a>
                                        <a href="#" class="dropdown-item"><i class="fas fa-comment-alt me-2"></i> Inbox</a>
                                        <a href="#" class="dropdown-item"><i class="fas fa-bell me-2"></i> Notifications</a>
                                        <a href="#" class="dropdown-item"><i class="fas fa-cog me-2"></i> Account Settings</a>
                                        <a href="#" class="dropdown-item"><i class="fas fa-power-off me-2"></i> Log Out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
            <!-- Topbar End -->

            <!-- Navbar & Hero Start -->
            {% block navbar %}
                <div class="container-fluid position-relative p-0">
                    <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                        <a href="" class="navbar-brand p-0">
                            <div style="display: flex; align-items: center; gap: 7px;">
                                <img src="{{ asset('img/logo_WorldCultura.png') }}" alt="Logo" width="100" height="90">
                                <h1 class="m-0"><i class=""></i>WorldCultura</h1>
                            </div>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                            <span class="fa fa-bars"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <div class="navbar-nav ms-auto py-0">
                                <a href="index.html" class="nav-item nav-link text-dark fw-bold">Home</a>
                                <a href="about.html" class="nav-item nav-link text-dark fw-bold">About</a>
                                <a href="services.html" class="nav-item nav-link text-dark fw-bold">Services</a>
                                <a href="packages.html" class="nav-item nav-link text-dark fw-bold">Packages</a>
                                <a href="blog.html" class="nav-item nav-link text-dark fw-bold">Blog</a>
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle text-dark fw-bold" data-bs-toggle="dropdown">Pages</a>
                                    <div class="dropdown-menu m-0">
                                        <a href="destination.html" class="dropdown-item text-dark">Destination</a>
                                        <a href="tour.html" class="dropdown-item text-dark">Explore Tour</a>
                                        <a href="booking.html" class="dropdown-item text-dark">Travel Booking</a>
                                        <a href="gallery.html" class="dropdown-item text-dark">Our Gallery</a>
                                        <a href="guides.html" class="dropdown-item text-dark">Travel Guides</a>
                                        <a href="testimonial.html" class="dropdown-item text-dark">Testimonial</a>
                                        <a href="404.html" class="dropdown-item text-dark">404 Page</a>
                                    </div>
                                </div>
                                <a href="contact.html" class="nav-item nav-link active text-primary fw-bold">Contact</a>
                                </div>
                                <a href="" class="btn btn-primary rounded-pill py-2 px-4 ms-lg-4">Book Now</a>
                            </div>
                        </div>
                    </nav>
                </div>
                <br>
                <br>
                <br>
            {% endblock %}
            <!-- Navbar & Hero End -->

            <!-- Reclamation Start -->
            {% block reclamation %}
                <div class="container my-5">
                    <h1 class="text-center mb-4">Réclamations</h1>

                    <div class="d-flex justify-content-center">
                        {{ form_start(form, { 'attr': {'class': 'd-flex'} }) }}
                        <input type="text" class="form-control me-2" placeholder="Rechercher..." name="search" value="{{ app.request.query.get('search') }}">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                        {{ form_end(form) }}
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>User_email</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Statut</th>
                                    <th>Créé le</th>
                                    <th>Mis à jour</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td>{{ reclamation.getUserName() }}</td>
                                        <td>{{ reclamation.type }}</td>
                                        <td>{{ reclamation.description }}</td>
                                        <td>
                                            {% if reclamation.statut == 'En cours' %}
                                                <span class="badge bg-warning text-dark">En cours</span>
                                            {% elseif reclamation.statut == 'Résolu' %}
                                                <span class="badge bg-success">Résolu</span>
                                            {% else %}
                                                <span class="badge bg-secondary">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ reclamation.createdat ? reclamation.createdat|date('Y-m-d H:i') : '-' }}</td>
                                        <td>{{ reclamation.updatedat ? reclamation.updatedat|date('Y-m-d H:i') : '-' }}</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-pencil-alt"></i> Modifier
                                                </a>
                                                <div class="d-flex justify-content-center mt-3">
                                                    <div>
                                                        {{ include('reclamation/_delete_form.html.twig') | raw }}
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">Aucune réclamation trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between">
                        <!-- Button to create a new reclamation on the left -->
                        <a href="{{ path('app_reclamation_new') }}" class="btn btn-success rounded-pill py-2 px-4">Créer une réclamation</a>

                        <!-- Pagination on the right -->
                        <div>
                            {{ knp_pagination_render(reclamations) }}
                        </div>
                    </div>

                </div>

            {% endblock %}
            <!-- Reclamation End -->

            <!-- Footer Start -->
            {% block footer %}
                <footer class="footer bg-dark text-white mt-5 py-4">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="m-0">© 2025 WorldCultura. Tous droits réservés.</p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <a href="#" class="text-white me-3">Politique de confidentialité</a>
                                <a href="#" class="text-white">Conditions d'utilisation</a>
                            </div>
                        </div>
                    </div>
                </footer>
            {% endblock %}
            <!-- Footer End -->

        {% endblock %}
    </body>
</html>
{% endblock %}
