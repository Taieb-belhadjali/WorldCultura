{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4" style="font-weight: bold; color: #34495e; text-transform: uppercase; letter-spacing: 1px;">Comment Details</h1>

        <div class="card shadow-lg p-4" style="background: white; border-radius: 12px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th class="text-muted">Id</th>
                        <td class="fw-bold">{{ comment.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Content</th>
                        <td class="fw-bold">{{ comment.content }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Create Date</th>
                        <td class="fw-bold">{{ comment.createDate ? comment.createDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_comment_back_index') }}" class="btn btn-secondary shadow-sm" 
               style="background-color: #1a237e; color: white; padding: 10px 20px; border-radius: 8px; font-weight: bold;">
                Back to List
            </a>
            {{ include('comment_back/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
