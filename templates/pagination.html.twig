{% if pageCount > 1 %}
<nav aria-label="Pagination">
    <ul class="pagination justify-content-center">
        {# Bouton Précédent #}
        {% if previous is defined and previous %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({ (pageParameterName): previous })) }}" aria-label="Précédent">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link" aria-hidden="true">&laquo;</span>
            </li>
        {% endif %}

        {# Boutons numérotés #}
        {% for page in 1..pageCount %}
            {% if page == current %}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({ (pageParameterName): page })) }}">{{ page }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {# Bouton Suivant #}
        {% if next is defined and next %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({ (pageParameterName): next })) }}" aria-label="Suivant">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link" aria-hidden="true">&raquo;</span>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
