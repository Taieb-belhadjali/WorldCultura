{% extends 'baseBlog.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #ff8a00, #e52e71);">
                <h2 class="fw-bold">📖 Post Details</h2>
            </div>
            <div class="card-body p-4">
                <div class="mb-4 text-center">
                    {% if post.image %}
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Post Image" class="img-fluid rounded-3 shadow-lg">
                    {% else %}
                        <p class="text-muted">No image available</p>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">📌 Post Title</label>
                    <p>{{ post.title }}</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">📝 Post Content</label>
                    <p>{{ post.content }}</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">📅 Create Date</label>
                    <p>{{ post.createDate|date('Y-m-d H:i:s') }}</p>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm">⬅️ Back to List</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary rounded-pill py-2 px-4 shadow-sm transform-hover-button">✏️ Update</a>
                    <a href="{{ path('app_comment_new', {'postId': post.id}) }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm">Add a Comment</a>                    
                </div>

                <!-- Delete Form (optional) -->
                {{ include('post/_delete_form.html.twig') }}
            </div>



        {% for comment in comments %}
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa fa-user"></i> Comment #{{ comment.id }}</h5>
                    <p class="card-text"><i class="fa fa-comment"></i> {{ comment.content }}</p>
                    <p class="text-muted"><i class="fa fa-calendar"></i> {{ comment.createDate ? comment.createDate|date('Y-m-d H:i:s') : 'N/A' }}</p>
                    
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fa fa-eye"></i> Show
                        </a>
                        <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <i class="fa fa-info-circle"></i> No comments found.
            </div>
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
