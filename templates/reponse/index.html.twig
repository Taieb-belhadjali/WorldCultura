{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}

    {% block reclamtion %}
         <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>User_email</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Date creation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.getUserName() }}</td>
                        <td>{{ reclamation.type }}</td>
                        <td>{{ reclamation.description }}</td>
                        <td>
                            {% if reclamation.statut == 'En cours' %}
                                <span class="badge bg-warning text-dark">En cours</span>
                            {% elseif reclamation.statut == 'Résolu' %}
                                <span class="badge bg-success">Résolu</span>
                            {% else %}
                                <span class="badge bg-secondary">En attente</span>
                            {% endif %}
                        </td>
                        <td>{{ reclamation.createdat ? reclamation.createdat|date('Y-m-d H:i') : '-' }}</td>
                        
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="{{ path('app_reponse_show', {'id': reclamation.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_reponse_new', { 'ReclamationId': reclamation.getId() }) }}" class="btn btn-primary">
                                    ➕ Repondre
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-muted text-center py-4">Aucune réclamation trouvée.</td>
                    </tr>
                {% endfor %}


                
    {% endblock %}
{% endblock %}
