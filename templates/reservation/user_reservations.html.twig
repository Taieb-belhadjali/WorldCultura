{% extends 'base.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
    <div class="container mt-5" style="background-color: #ffffff; border-radius: 15px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); padding: 20px;">
        <h1 class="display-6 mb-4 text-center text-primary">Liste de mes Réservations</h1>

        <!-- Barre de recherche -->
        <div class="text-center mb-4">
            <input class="form-control w-50 mx-auto" type="text" placeholder="Rechercher une réservation..." id="searchInput">
        </div>

        <!-- Boutons de tri -->
        <div class="text-center mb-4">
            <button class="btn btn-outline-primary btn-sm" id="sortNewest">Les plus récentes</button>
            <button class="btn btn-outline-secondary btn-sm" id="sortOldest">Les plus anciennes</button>
        </div>

        {% if reservations is not empty %}
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="reservationsTable">
                    <thead class="table-primary text-dark">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>nom de voyageur</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Départ</th>
                            <th>Destination</th>
                            <th>Date de départ</th> <!-- Ajouté ici -->
                            <th>Date d'arrivée</th> <!-- Ajouté ici -->
                            <th>Prix (€)</th>
                            <th>Agence</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservations %}
                            <tr class="text-center">
                                <td>{{ reservation.id }}</td>
                                <td>{{ reservation.userName }}</td>
                                <td>{{ reservation.email }}</td>
                                <td>{{ reservation.contact }}</td>
                                <td>{{ reservation.rehla.depart }}</td>
                                <td>{{ reservation.rehla.destination }}</td>
<td>
                                 <!-- Affichage de la date de départ -->
                                    {{ reservation.rehla.departDate ? reservation.rehla.departDate|date('Y-m-d H:i') : 'Non définie' }}
                                </td>
                                <td>
                                    <!-- Affichage de la date d'arrivée -->
                                    {{ reservation.rehla.arrivalDate ? reservation.rehla.arrivalDate|date('Y-m-d H:i') : 'Non définie' }}
                                </td>


                                <td>{{ reservation.rehla.price }}</td>
                                <td>{{ reservation.rehla.agence.nom }}</td>
                               
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="{{ path('reservation_delete', {'id': reservation.id}) }}" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Annuler
                                        </a>
                                         <!-- Bouton Payer -->
        <a href="{{ path('payment_checkout', {'id': reservation.id}) }}" class="btn btn-outline-success btn-sm">
            <i class="bi bi-credit-card"></i> Payer
        </a>
    </div>
</td>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-4">
                <i class="bi bi-emoji-frown display-6 text-muted"></i>
                <p class="mt-2 text-muted">Aucune réservation trouvée.</p>
            </div>
        {% endif %}
    </div>

    <!-- Script de filtrage et de tri -->
    <script>
    // Filtrage des réservations
    document.getElementById("searchInput").addEventListener("keyup", function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("table tbody tr");

        rows.forEach(function(row) {
            let userName = row.querySelector("td:nth-child(2)").innerText.toLowerCase();
            let email = row.querySelector("td:nth-child(3)").innerText.toLowerCase();
            let contact = row.querySelector("td:nth-child(4)").innerText.toLowerCase();
            let depart = row.querySelector("td:nth-child(5)").innerText.toLowerCase();
            let destination = row.querySelector("td:nth-child(6)").innerText.toLowerCase();
            let price = row.querySelector("td:nth-child(7)").innerText.toLowerCase();
            let agence = row.querySelector("td:nth-child(8)").innerText.toLowerCase();

            if (userName.includes(filter) || email.includes(filter) || contact.includes(filter) ||
                depart.includes(filter) || destination.includes(filter) || price.includes(filter) ||
                agence.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });

    // Tri des réservations
    document.getElementById("sortNewest").addEventListener("click", function() {
        let rows = Array.from(document.querySelectorAll("table tbody tr"));
        rows.sort(function(a, b) {
            let idA = parseInt(a.querySelector("td:nth-child(1)").innerText);
            let idB = parseInt(b.querySelector("td:nth-child(1)").innerText);
            return idB - idA;  // Tri décroissant (plus récent en premier)
        });
        let tbody = document.querySelector("table tbody");
        tbody.innerHTML = "";
        rows.forEach(function(row) {
            tbody.appendChild(row);
        });
    });

    document.getElementById("sortOldest").addEventListener("click", function() {
        let rows = Array.from(document.querySelectorAll("table tbody tr"));
        rows.sort(function(a, b) {
            let idA = parseInt(a.querySelector("td:nth-child(1)").innerText);
            let idB = parseInt(b.querySelector("td:nth-child(1)").innerText);
            return idA - idB;  // Tri croissant (plus ancien en premier)
        });
        let tbody = document.querySelector("table tbody");
        tbody.innerHTML = "";
        rows.forEach(function(row) {
            tbody.appendChild(row);
        });
    });
    </script>
{% endblock %}
