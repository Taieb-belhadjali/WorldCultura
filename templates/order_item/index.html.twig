{% extends 'base.html.twig' %}

{% block title %}Order Items{% endblock %}

{% block body %}
    <h1>Order Items</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for orderItem in orderItems %}
                <tr>
                    <td>{{ orderItem.id }}</td>
                    <td>{{ orderItem.product.name ?? 'No Product Name' }}</td>
                    <td>{{ orderItem.quantity }}</td>
                    <td>{{ orderItem.price }}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('order_item_form_edit', { id: orderItem.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" action="{{ path('order_item_delete', { id: orderItem.id }) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ orderItem.id) }}">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_item_form_new') }}" class="btn btn-primary">Add New Order Item</a>
{% endblock %}
