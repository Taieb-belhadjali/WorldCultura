{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container py-5">
        <!-- Title and Navigation -->
        <h1 class="text-center text-primary fw-bold display-4 mb-4">Edit Event</h1>
        
        <div class="text-center mb-4">
            <p class="text-muted lead">Modify your event details below</p>
        </div>

        <!-- Event Edit Form -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    
                    <div class="card-body p-5">
                        {{ include('event/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>
                    
                    <!-- Footer with navigation links -->
                    <div class="card-footer d-flex justify-content-between py-3">
                        <a href="{{ path('app_event_index') }}" class="btn btn-outline-primary px-4">Back to list</a>
                       
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Event Section -->
        <div class="mt-5 text-center">
            
            
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>

    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #007bff, #6610f2);
        }
        .btn-warning {
            transition: all 0.3s ease-in-out;
        }
        .btn-warning:hover {
            background-color: #d39e00;
            transform: scale(1.05);
        }
        .card {
            transition: box-shadow 0.3s ease-in-out;
            border-radius: 12px;
        }
        .card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }
    </style>
{% endblock %}
