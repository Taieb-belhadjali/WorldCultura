{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-5 text-primary">Event Details</h1>

    <div class="row justify-content-center">
        <!-- Card for Event Details -->
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Event Image -->
                <div class="position-relative">
                    {% if event.image %}
                        <img src="{{ asset('uploads/images/' ~ event.image) }}" class="img-fluid w-100" alt="Event Image" style="max-height: 400px; object-fit: cover;">
                    {% else %}
                        <div class="text-muted text-center py-5 bg-light">No image uploaded</div>
                    {% endif %}
                </div>

                <!-- Event Details -->
                <div class="card-body">
                    <h2 class="text-primary text-center">{{ event.name }}</h2>

                    <!-- Dates avec icônes -->
                    <div class="d-flex justify-content-center gap-4 mt-3">
                        <p class="text-muted"><i class="fa fa-calendar-alt text-primary me-2"></i> Start: {{ event.dateDebut ? event.dateDebut|date('d M Y, H:i') : 'N/A' }}</p>
                        <p class="text-muted"><i class="fa fa-calendar-alt text-primary me-2"></i> End: {{ event.dateFin ? event.dateFin|date('d M Y, H:i') : 'N/A' }}</p>
                    </div>

                    <!-- Description encadrée -->
                    <div class="border rounded p-4 bg-light mt-4">
                        <h5 class="text-primary"><i class="fa fa-align-left me-2"></i>Description</h5>
                        <p class="mb-0">{{ event.description }}</p>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_event_index') }}" class="btn btn-outline-primary px-4">Back</a>
                    <a href="{{ path('app_participation_new', {'id': event.id}) }}" class="btn btn-outline-primary px-4">Participate</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Participants Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4 p-4" style="background-color: #f9f9f9;">
                <h5 class="text-center mb-4 text-primary">Participants</h5>

                <div class="list-group">
                    {% for participation in event.getParticipations() %}
                        <div class="list-group-item d-flex justify-content-between align-items-center border rounded mb-3 p-3 shadow-sm">
                            <span class="fw-bold text-primary">{{ participation.getNom() }}</span>
                            <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="btn btn-outline-primary px-4">Info</a>
                        </div>
                    {% else %}
                        <div class="list-group-item text-center text-muted">No participants yet.</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
