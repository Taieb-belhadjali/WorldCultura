{% extends 'dashboard.html.twig' %}
{% block body %}
    <div id="layoutSidenav">
        <body class="sb-nav-fixed">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Admin-Dashboard</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    <div class="d-flex justify-content-between mb-3">
                        <h2>Events</h2>
                        <a href="{{ path('app_event_new') }}" class="btn btn-success">Ajouter</a>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Events-DataTable
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Date début</th>
                                    <th>Date fin</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td>{{ event.name }}</td>
                                        <td>{{ event.description }}</td>
                                        <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                                        <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                                        <td>
                                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                            <a href="{{ path('app_event_delete', {'id': event.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">Supprimer</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Aucun événement trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
