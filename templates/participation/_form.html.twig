{% block body %}
    <style>
        /* Conteneur du formulaire */
        .form-container {
            background: linear-gradient(to bottom, #f8f9fa, #e3e6ea); /* Dégradé de gris clair */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        /* Champs de saisie stylisés */
        .form-control {
            border: 2px solid #0d6efd; /* Bordure bleue */
            border-radius: 50px;
            padding-left: 45px; /* Espace pour icône */
            transition: 0.3s ease-in-out;
        }

        .form-control:focus {
            border-color: #073d88;
            box-shadow: 0 0 10px rgba(8, 57, 109, 0.3);
        }

        /* Labels des champs */
        .form-label {
            font-weight: bold;
            color: #073d88;
        }

        /* Icônes dans les champs */
        .input-group-text {
            background: none;
            border: none;
            font-size: 1.2rem;
            color: #073d88;
        }

        /* Bouton de soumission */
        .btn-primary {
            background: #073d88;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            padding: 12px 25px;
            transition: 0.3s;
        }

        .btn-primary:hover {
            background: #0a58ca;
            box-shadow: 0 5px 15px rgba(8, 57, 109, 0.3);
        }

        /* Messages d'erreur */
        .form-errors {
            color: red;
            font-size: 0.9rem;
        }
    </style>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="form-container">
                <h2 class="text-center text-primary mb-4"><i class="bi bi-person-plus"></i> Event Participation</h2>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-4">
                    <label class="form-label">Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                    </div>
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-4">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                    </div>
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-4">
                    <label class="form-label">Phone</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Enter your phone number'}}) }}
                    </div>
                    {{ form_errors(form.telephone) }}
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary shadow">
                        <i class="bi bi-check-circle"></i> Submit
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
