{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Résultats de la recherche</h1>

    <p class="text-muted">
        Résultats pour : <strong>"{{ query }}"</strong>
    </p>

    {% if products is not empty %}
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                            <a href="{{ path('app_product_details', {'id': product.id}) }}" class="btn btn-primary">Voir détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun produit ne correspond à votre recherche.</p>
    {% endif %}

    <a href="{{ path('app_products') }}" class="btn btn-secondary mt-4">Retour à la liste des produits</a>
</div>
{% endblock %}
